@{
    ViewData["Title"] = "Home Page";
}
@* Style for Home Page *@
<style>
    p{
       font-size: 16px;
       color: #333;
        line-height: 1.6;
        
    }
    h1{
        color: #00695c
    }
</style>
<div class="container-fluid bg-dark text-white d-flex flex-column align-items-center justify-content-center vh-100 text-center" style=" background: linear-gradient(135deg, #e3f2fd, #fff);">
    <h1 class="display-3 fw-bold animated fadeIn">Welcome to Our Platform!</h1>
    <p class="lead  mb-4 animated fadeIn delay-1s" >
        Build modern and powerful web applications with <strong>ASP.NET Core</strong>.
    </p>

    <a href="https://learn.microsoft.com/aspnet/core" class="btn btn-lg btn-primary shadow-sm animated fadeIn delay-2s">
        <i class="bi bi-book"></i> Learn More
    </a>
</div>

@section Scripts
{
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
    <!-- Adding animate.css for smooth animations -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
}

